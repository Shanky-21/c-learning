//program for printin* in a certain structure 
#include <stdio.h>
int main()
{
int i,j,rows;
printf("enter number of rows");
scanf("%d",&rows);
for(i=1;i<=rows;i++)
{  for(j=rows;j>=1;j++)
    { if(j<=i)
        printf("*\t");
      else
        printf("\t");
    }
   for(j=1;j<rows;j++)
    { if(j<i)
        printf("*\t");
      else
        printf("\t");
    }
 return 0;
 }
